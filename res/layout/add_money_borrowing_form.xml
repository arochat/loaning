        <EditText
            android:id="@+id/amount_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/amount_label"
            android:inputType="number|numberDecimal" />

        <Spinner
            android:id="@+id/spinnerCurrencies"
